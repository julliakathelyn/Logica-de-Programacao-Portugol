	//2. Faça um programa que leia um valor informado pelo usuário e diga se o valor informado é positivo,
	//negativo ou zero.
		real n1
		escreva("Informe um numero")
		leia(n1)

		se( n1 > 0){
			escreva("O numero informado é Positivo")
		}senao se(n1 < 0){
			escreva("O codigo informado é negativo")
		}senao{
			escreva("o numero informado é zero")
			}
	}
}
